{
  "excludePatterns": [
    "node_modules/**",
    ".git/**",
    "dist/**",
    "build/**",
    "*.log",
    ".cleanup-backups/**"
  ],
  "includePatterns": [
    "**/*"
  ],
  "createBackups": false,
  "dryRun": true,
  "autoFixConfidence": "high",
  "autoFixRiskLevel": "safe",
  "analyzers": {
    "duplicates": {
      "enabled": true,
      "minFileSize": 100,
      "excludeSimilar": false
    },
    "dependencies": {
      "enabled": true,
      "checkDevDependencies": true,
      "checkPeerDependencies": true
    },
    "deadCode": {
      "enabled": false
    },
    "testFiles": {
      "enabled": true,
      "maxAge": 30
    },
    "configFiles": {
      "enabled": true,
      "consolidate": false
    }
  },
  "reporting": {
    "format": "json",
    "includeDetails": true,
    "failOnFindings": false,
    "maxFindings": 100
  }
}