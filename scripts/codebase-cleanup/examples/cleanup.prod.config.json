{
  "excludePatterns": [
    "node_modules/**",
    ".git/**",
    "dist/**",
    "build/**",
    "*.log",
    ".cleanup-backups/**",
    "docs/**",
    "examples/**",
    "*.md",
    "LICENSE*",
    ".github/**"
  ],
  "includePatterns": [
    "src/**",
    "apps/**",
    "packages/**",
    "*.js",
    "*.ts",
    "*.json"
  ],
  "createBackups": true,
  "dryRun": false,
  "autoFixConfidence": "high",
  "autoFixRiskLevel": "safe",
  "analyzers": {
    "duplicates": {
      "enabled": true,
      "minFileSize": 50,
      "excludeSimilar": true
    },
    "dependencies": {
      "enabled": true,
      "checkDevDependencies": false,
      "checkPeerDependencies": true
    },
    "deadCode": {
      "enabled": true,
      "preserveExports": true,
      "preserveApiEndpoints": true
    },
    "testFiles": {
      "enabled": false
    },
    "configFiles": {
      "enabled": true,
      "consolidate": true
    }
  }
}