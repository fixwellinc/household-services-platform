{
  "excludePatterns": [
    "node_modules/**",
    ".git/**",
    "dist/**",
    "build/**",
    "*.log",
    ".cleanup-backups/**",
    "**/*.test.*",
    "**/*.spec.*",
    "__tests__/**",
    "coverage/**",
    ".nyc_output/**"
  ],
  "includePatterns": [
    "**/*"
  ],
  "createBackups": true,
  "dryRun": true,
  "autoFixConfidence": "medium",
  "autoFixRiskLevel": "review",
  "analyzers": {
    "duplicates": {
      "enabled": true,
      "minFileSize": 100,
      "excludeSimilar": false
    },
    "dependencies": {
      "enabled": true,
      "checkDevDependencies": true,
      "checkPeerDependencies": false
    },
    "deadCode": {
      "enabled": false,
      "preserveExports": true
    },
    "testFiles": {
      "enabled": true,
      "maxAge": 90
    },
    "configFiles": {
      "enabled": true,
      "consolidate": false
    }
  }
}