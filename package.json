{
  "name": "fixwell-services-monorepo",
  "version": "1.0.0",
  "description": "Fixwell Services Platform - Monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:unified": "node unified-server.js",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=apps/backend",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "build:unified": "npm run build:frontend && npm run build:backend",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "npm run start --workspace=apps/backend",
    "start:frontend": "npm run start --workspace=apps/frontend",
    "start:unified": "node unified-server.js",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit:frontend && npm run test:unit:backend",
    "test:unit:frontend": "npm run test --workspace=apps/frontend",
    "test:unit:backend": "npm run test --workspace=apps/backend",
    "test:integration": "npm run test:integration:backend && npm run test:integration:frontend",
    "test:integration:frontend": "cd apps/frontend && npm run test -- --testPathPattern=integration",
    "test:integration:backend": "cd apps/backend && npm run test -- src/tests/integration",
    "test:e2e": "cd apps/frontend && npm run test -- --testPathPattern=e2e",
    "test:security": "cd apps/backend && npm run test -- --config=vitest.config.security.js",
    "test:accessibility": "cd apps/frontend && npm run test -- --config=jest.config.accessibility.js",
    "test:performance": "cd apps/backend && npm run test -- src/tests/performance",
    "test:comprehensive": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:security && npm run test:accessibility && npm run test:performance",
    "test:coverage": "npm run test:coverage:frontend && npm run test:coverage:backend",
    "test:coverage:frontend": "cd apps/frontend && npm run test -- --coverage",
    "test:coverage:backend": "cd apps/backend && npm run test -- --coverage",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "deploy:railway": "railway up",
    "deploy:unified": "railway up",
    "deploy:production": "node scripts/deploy/production-deploy.sh",
    "deploy:migrate": "node scripts/deploy/migration-manager.js migrate",
    "deploy:rollback": "node scripts/deploy/rollback-manager.js rollback",
    "deploy:status": "railway status && node scripts/deploy/migration-manager.js status",
    "deploy:backup": "node scripts/deploy/migration-manager.js backup",
    "deploy:health": "node scripts/deploy/rollback-manager.js health-check",
    "security:setup": "node scripts/deploy/setup-production-security.js",
    "security:check": "npm audit && npm run test:security",
    "setup": "npm install && npm run build:unified"
  },
  "dependencies": {
    "express": "^4.18.2",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest-axe": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fixwellinc/fixwell-services-platform.git"
  },
  "keywords": [
    "fixwell",
    "services",
    "monorepo",
    "nextjs",
    "express",
    "railway",
    "unified"
  ],
  "author": "FixWell Inc",
  "license": "MIT"
}